<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="CadastroServerPU" transaction-type="RESOURCE_LOCAL">
           <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>br.com.estacio.server.model.Usuario</class>
        <class>br.com.estacio.server.model.Produto</class>
        <class>br.com.estacio.server.model.Pessoa</class>
        <class>br.com.estacio.server.model.PessoaFisica</class>
        <class>br.com.estacio.server.model.PessoaJuridica</class>
        <class>br.com.estacio.server.model.Movimento</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/mydb"/>
            <property name="jakarta.persistence.jdbc.user" value="Larissa"/>
            <property name="jakarta.persistence.jdbc.password" value="123"/>
            <property name="eclipselink.logging.level" value="FINE"/>
            <property name="eclipselink.ddl-generation" value="none"/>
        </properties>
    </persistence-unit>
</persistence> 